{
    "name": "hereby",
    "version": "0.1.0",
    "description": "A simple task runner",
    "type": "module",
    "bin": "./dist/cli/index.js",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./cli": "./dist/cli/index.js",
        "./package.json": "./package.json"
    },
    "author": "Jake Bailey",
    "license": "MIT",
    "keywords": [
        "hereby",
        "herebyfile",
        "task",
        "runner",
        "build",
        "gulp",
        "make",
        "makefile"
    ],
    "engines": {
        "node": ">= 14.16"
    },
    "files": [
        "README.md",
        "LICENSE",
        "./dist/**/*.js",
        "!**/__tests__/**",
        "./dist/index.d.ts"
    ],
    "dependencies": {
        "command-line-args": "^5.2.1",
        "command-line-usage": "^6.1.3",
        "import-meta-resolve": "^2.0.3",
        "mico-spinner": "^1.4.0",
        "p-queue": "^7.3.0",
        "picocolors": "^1.0.0",
        "pretty-ms": "^8.0.0"
    },
    "devDependencies": {
        "@ava/typescript": "^3.0.1",
        "@tsconfig/node14": "^1.0.3",
        "@types/command-line-args": "^5.2.0",
        "@types/command-line-usage": "^5.0.2",
        "@types/node": "^14.18.23",
        "@typescript-eslint/eslint-plugin": "^5.33.0",
        "@typescript-eslint/parser": "^5.33.0",
        "ava": "^4.3.1",
        "c8": "^7.12.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.21.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-ava": "^13.2.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "esmock": "^1.9.3",
        "execa": "^6.1.0",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.7.4"
    },
    "packageManager": "npm@8.17.0",
    "volta": {
        "node": "14.20.0",
        "npm": "8.17.0"
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc --watch",
        "test": "cross-env NODE_OPTIONS=--loader=esmock ava",
        "coverage": "cross-env NODE_OPTIONS=--loader=esmock c8 ava",
        "prepack": "rimraf dist && npm run build"
    },
    "ava": {
        "typescript": {
            "rewritePaths": {
                "src/": "dist/"
            },
            "compile": false
        },
        "environmentVariables": {
            "NO_COLOR": "1",
            "FORCE_COLOR": "0"
        }
    },
    "c8": {
        "all": true,
        "include": "dist",
        "reporter": [
            "text",
            "html",
            "lcov"
        ]
    }
}
